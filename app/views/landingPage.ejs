<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="/scripts/jquery.md5.js"></script>
<script>
    $(function() {
        $("#login_btn").click(function() {
            var username = $("input#login_uname").val().trim();
            var password = ($("input#login_passwd").val().trim());
            console.log(password);
            var dataString = 'emailId=' + username + '&password=' + password;
            $.ajax({
                type: "POST",
                url: "/signIn",
                data: dataString,
                success: function(data) {
                    var response = $.parseJSON(data).response;
                    if (response.code == 200){
                        var userId = response.miscellaneous.userId;
                        var url = '/home/user/' + userId + '/';
                        $(location).attr('href',url);
                    }
                }
            });
            return false;
        });

        $(function() {
            $("#signup_btn").click(function() {
                var username = $("input#signup_name").val().trim();
                var emailId = $('input#signup_emailId').val().trim();
                var password = ($("input#signup_passwd").val().trim());
                var dataString = 'name=' +  username +  '&emailId=' + emailId + '&password=' + password;
                $.ajax({
                    type: "POST",
                    url: "/signUp",
                    data: dataString,
                    success: function(data) {
                        var response = $.parseJSON(data).response;
                        if (response.code == 200){
                            console.log (data);
                            var userId = response.miscellaneous.userId;
                            var url = '/home/user/' + userId + '/';
                            $(location).attr('href',url);
                        }
                    }
                });
                return false;
            });
        });
    });
</script>
